{% extends 'admin/standard_layout.html.twig' %}

{% block title %}
    Settings
{% endblock %}


{% block sonata_admin_content %}
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h4 class="box-title">
                            Settings
                        </h4>
                    </div>
                    {{ form_start(form) }}
                    <div class="box-body">

                        <div class="my-custom-class-for-errors">
                            {{ form_errors(form) }}
                        </div>

                        <div class="row">
                            <div class="form-group col-md-12">
                                {{ form_row(form.new_user_email_template) }}
                            </div>
                            <div class="col-md-12">
                                <div style="background-color: #f8f8f8; padding: 15px;">
                                <p>Available email template variables:</p>
                                <ul>
                                    {% verbatim %}
                                        <li>{{ firstName }} - User First Name</li>
                                        <li>{{ lastName }} - User Last Name </li>
                                        <li>{{ email }} - User email</li>
                                        <li>{{ temporaryPassword }} - Newly created password (it's not stored as plain text!)</li>
                                    {% endverbatim %}
                                </ul>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-5">
                                {{ form_label(form.new_user_email_title) }}
                                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                    {{ form_widget(form.new_user_email_title) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-5">
                                {{ form_label(form.email_from_address) }}
                                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                    {{ form_widget(form.email_from_address) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-5">
                                    {{ form_label(form.email_from_name) }}
                                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                    {{ form_widget(form.email_from_name) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="sonata-ba-form-actions well well-small form-actions">
                        <button type="submit" class="btn btn-success" name="btn_update_and_edit"><i class="fa fa-save" aria-hidden="true"></i> Update</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>
{% endblock %}
